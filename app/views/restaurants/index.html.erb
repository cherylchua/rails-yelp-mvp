<div class="container">
  <h1>Restaurants</h1>

  <ul>
  <% @restaurants.each do |restaurant| %>
    <li>
      <%= link_to restaurant.name, restaurant_path(restaurant) %> |
      <%= restaurant.address %> |
      <%= restaurant.phone_number %> |
      <%= restaurant.category.capitalize %>
    </li>
  <% end %>
  </ul>

  <p><%= link_to "Add Restaurant", new_restaurant_path %></p>
</div>
